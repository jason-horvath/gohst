#!/bin/bash

# Source the .env file
if [ -f .env ]; then
  source .env
else
  echo "âŒ .env file not found!"
  echo "ğŸ‘‰ Please copy .env.example to .env and configure it before proceeding."
  exit 1
fi

# Define the root directory of your project
ROOT_DIR="$(cd "$(dirname "$0")" && pwd)"
TMP_DIR="$ROOT_DIR/tmp"
CMD_DIR="$ROOT_DIR/cmd"
CMD_DEV_DIR="$CMD_DIR/dev"
GOHST_SERVER="$CMD_DEV_DIR/gohst_server"
DOCKER_SQL_BUILD="$CMD_DEV_DIR/docker_sql_build"
DOCKER_SQL_CLEAR="$CMD_DEV_DIR/docker_sql_clear"
STORAGE_MGR="$CMD_DEV_DIR/storage_mgr"
VITE_PROCESS="$CMD_DEV_DIR/vite_process"
VITE_PID_FILE="$TMP_DIR/vite.pid"


wait_for_postgres() {
    spinner="/|\\-"
    i=0
    echo "ğŸ˜ :: PostgreSQL startup ::"
    until docker exec "${APP_NAME:-gohst}-postgres" psql -U "$DB_USER" -d "$DB_NAME" -c "SELECT 1" > /dev/null 2>&1; do
        # Check if container is running
        if ! docker ps --format "table {{.Names}}" | grep -q "${APP_NAME:-gohst}-postgres"; then
            echo ""
            echo "âŒ PostgreSQL container is not running!"
            echo "ğŸ” Try running: docker compose up -d"
            return 1
        fi

        # Check timeout
        if [ $elapsed -ge $timeout ]; then
            echo ""
            echo "âŒ Timeout waiting for PostgreSQL to be ready"
            echo "ğŸ” Check container logs: docker logs ${APP_NAME:-gohst}-postgres"
            return 1
        fi

        i=$(( (i+1) %4 ))
        printf "\râ³ Waiting for PostgreSQL %s (${elapsed}s)" "${spinner:$i:1}"
        sleep 1
        elapsed=$((elapsed + 1))
    done

    echo ""
}

case "$1" in
    server:start)
        exec "$GOHST_SERVER" "start"
        ;;
    server:stop)
        exec "$GOHST_SERVER" "stop"
        ;;
    docker:sql::build)
        exec "$DOCKER_SQL_BUILD"
        ;;
    docker:sql:clear)
        exec "$DOCKER_SQL_CLEAR"
        ;;
    docker:rebuild)
        "$DOCKER_SQL_BUILD"
        sleep 2
        docker compose down -v
        docker compose up -d --build
        ;;
    build)
        echo "ğŸš€ Building development environment..."

        # Step 1: Run database migrations & seeds
        echo "ğŸ”— Ensuring database migrations & seeds are linked..."
        "$DOCKER_SQL_BUILD"

        # Step 2: Build Docker containers
        echo "ğŸ³ Building Docker containers..."
        docker compose build

        # Step 3: Install npm dependencies
        echo "ğŸ“¦ğŸ“¦ Installing NPM Packages  ğŸ“¦ğŸ“¦"
        cd "$ROOT_DIR" || exit
        npm install

        "$STORAGE_MGR" "link"

        echo "âœ… Gohst is built!"
        echo "ğŸ‘» To begin, run: run: gohst up"
        ;;
    destroy)
        echo "ğŸ”¥ Destroying development environment..."

        # Step 1: Bring down Docker
        docker compose down -v
        "$DOCKER_SQL_CLEAR"

        # Step 2: Start Air for live-reloading Go server
        echo "ğŸ’¨ Stopping Gohst server..."

        # Step 3: Stop Vite if running
        if [ -f "$VITE_PID_FILE" ]; then
            echo "ğŸ›‘ Stopping Vite..."
            kill $(cat "$VITE_PID_FILE") && rm "$VITE_PID_FILE"
            echo "âœ… Vite stopped."
        else
            echo "â„¹ï¸  No Vite process found."
        fi

        # Step 4: Remove node_modules
        if [ -d "$ROOT_DIR/node_modules" ]; then
            echo "ğŸ—‘ Removing node_modules directory..."
            rm -rf "$ROOT_DIR/node_modules"
            echo "âœ… node_modules removed."
        else
            echo "â„¹ï¸  No node_modules directory found."
        fi

        # Step 5: Make sure the gohst server is down
        cd "$ROOT_DIR" || exit
        exec "$GOHST_SERVER" "stop"

        # Step 6: tmp directory cleanup

        echo "âœ… Dev environment is destroyed!"
        ;;
    dev)
        echo ""
        echo "ğŸš€ Starting development environment..."

        # Step 1: Bring up Docker
        echo "ğŸ³ Bringing up Docker containers..."
        docker compose up -d

        # Start Cite
        "$VITE_PROCESS" "start"

        # Step 4: Wait for Postrgres to be ready
        #wait_for_postrgres
        wait_for_postgres

        # Step 5: Start GOHST Server for live-reloading Go server
        cd "$ROOT_DIR" || exit
        "$GOHST_SERVER" "start"

        # After killing signal: stop gohst stop Vite, stop Docker
        echo "ğŸ›‘ Stopping Gohst server"
        "$GOHST_SERVER" "stop"

        echo "ğŸ›‘ Stopping Vite"
        "$VITE_PROCESS" "stop"

        echo "ğŸ›‘ Stopping Docker"
        docker compose stop
        echo "ğŸ›‘ Dev environment manually halted!"
        echo ""
        ;;

     dev:down)
        echo ""
        echo "ğŸ›‘ Stopping development environment..."

        # Step 1: Bring down Docker
        echo "ğŸ³ Bringing down Docker containers..."
        docker compose stop

         # Step2: Stop Vite if running
        if [ -f "$VITE_PID_FILE" ]; then
            echo "ğŸ›‘ Stopping Vite..."
            kill $(cat "$VITE_PID_FILE") && rm "$VITE_PID_FILE"
            echo "âœ… Vite stopped."
        else
            echo "â„¹ï¸  No Vite process found."
        fi

        # Step 3: Start Air for live-reloading Go server
        echo -e "ğŸ’¨ Stopping Gohst Server..."
        cd "$ROOT_DIR" || exit
        "$GOHST_SERVER" "stop"
        docker compose stop
        echo "ğŸ›‘ Dev environment is down!"
        echo ""
        ;;
    storage:link)
        "$STORAGE_MGR" "link"
        ;;
    migrate:run)
        echo "ğŸ”„ Running database migrations..."
        go run cmd/migrate/main.go run
        ;;
    migrate:status)
        echo "ğŸ“Š Checking migration status..."
        go run cmd/migrate/main.go status
        ;;
    migrate:rollback)
        echo "âª Rolling back last migration batch..."
        go run cmd/migrate/main.go rollback
        ;;
    migrate:create)
        if [ -z "$2" ]; then
            echo "âŒ Migration name is required"
            echo "Usage: ./gohst migrate:create <migration_name>"
            exit 1
        fi
        echo "ğŸ“ Creating new migration: $2"
        go run cmd/migrate/main.go create "$2"
        ;;
    migrate:seed)
        echo "ğŸŒ± Running database seeds..."
        go run cmd/migrate/main.go seed
        ;;
    migrate:seed:status)
        echo "ğŸ“Š Checking seed status..."
        go run cmd/migrate/main.go seed:status
        ;;
    migrate:seed:refresh)
        echo "ğŸ”„ Refreshing seeds..."
        go run cmd/migrate/main.go seed:refresh
        ;;
    migrate:seed:rollback)
        echo "âª Rolling back last seed batch..."
        go run cmd/migrate/main.go seed:rollback
        ;;
    migrate:full)
        echo "ğŸš€ Running full database setup (migrations + seeds)..."
        go run cmd/migrate/main.go full
        ;;
    migrate:seed:create)
        if [ -z "$2" ]; then
            echo "âŒ Seed name is required"
            echo "Usage: ./gohst migrate:seed:create <seed_name>"
            exit 1
        fi
        echo "ğŸ“ Creating new seed: $2"
        go run cmd/migrate/main.go seed:create "$2"
        ;;
    *)
        echo ""
        echo -e "====++++====++++====++++====++++====++++====++++====++++====\n"
        echo -e "      ğŸ‘»ğŸ‘»ğŸ‘» Usage: gohst <command>:[arguments] ğŸ‘»ğŸ‘»ğŸ‘»      \n"
        echo -e "====++++====++++====++++====++++====++++====++++====++++====\n"
        echo "Available commands:"
        echo ""
        echo "  destroy               - Destroy the development environment including docker, sql files: npm, docker, vite, gohst"
        echo "  build                 - Build the development environment with dockersql files: npm, docker, vite, gohst"
        echo "  dev                   - Bring up the development environment: npm, docker, vite, gohst"
        echo "  dev:down              - Bring down the development environment: npm, docker, vite, gohst"
        echo "  server:start          - Start the air application server"
        echo "  server:stop           - Stop the ghost server"
        echo "  docker:sql:build      - Set up database migrations & seeds for docker"
        echo "  docker:sql:clear      - Delete migrations & seeds for docker"
        echo "  docker:rebuild        - Rebuild docker"
        echo "  migrate:run           - Run all pending migrations"
        echo "  migrate:status        - Show migration status"
        echo "  migrate:rollback      - Rollback the last batch of migrations"
        echo "  migrate:create        - Create a new migration file"
        echo "  migrate:seed          - Run all pending seeds"
        echo "  migrate:seed:status   - Show seed status"
        echo "  migrate:seed:refresh  - Clear all seed records and re-run all seeds"
        echo "  migrate:seed:rollback - Rollback the last batch of seeds"
        echo "  migrate:seed:create   - Create a new seed file"
        echo "  migrate:full          - Run migrations and seeds together"
        echo "  storage:link          - Link assets to the static directory"
        echo ""
        exit 1
        ;;
esac
